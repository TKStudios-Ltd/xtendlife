{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{{ 'component-collection-hero.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign banner_ref = collection.metafields.custom.collection_banner_main
  assign banner_img = nil
  if banner_ref != blank
    assign banner_img = banner_ref | image_url: width: 3000
  elsif collection.image
    assign banner_img = collection.image | image_url: width: 3000
  endif
-%}

{%- style -%}
  .breadcrumbs {
    font-size: 1.2rem;
    margin: 0 auto 1rem;
  }
  .breadcrumbs a {
    text-decoration: none;
    color: #1F1946;
    opacity: 0.5;
  }
  .breadcrumbs__sep {
    margin: 0 0.5rem;
    opacity: 0.5;
  }
  .breadcrumbs .bc-current {
    color: #1F1946;
    opacity: 1;
  }

  /* .collection-hero__wrapper {
    margin: 0 2rem;
  } */
  .collection-hero--bg {
    {% comment %} background image is injected via the style attribute var(--banner-image) {% endcomment %}
    background-image: var(--banner-image);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 10px;
  }

  /* Vertically center text, keep left aligned */
  .collection-hero__inner {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    min-height: 215px;
  }

  @media screen and (min-width: 990px) {
    .collection-hero__inner {
      min-height: 440px;
    }
  }

  /* Minor tweak for small screens so shadows don't overlap */
  @media screen and (max-width: 749px) {
    .collection-hero--with-image .collection-hero__inner {
      padding: 2rem;
    }
  }
{%- endstyle -%}

{%- comment -%} Breadcrumbs {%- endcomment -%}
<nav class="breadcrumbs page-width" aria-label="Breadcrumb">
  <a href="{{ routes.root_url }}">Home</a>
  <span class="breadcrumbs__sep">â€º</span>
  <span class="bc-current" aria-current="page">{{ collection.title | escape }}</span>
</nav>

{%- comment -%} Banner {%- endcomment -%}
<div class="collection-hero__wrapper page-width">
  <div
    class="collection-hero{% if banner_img %} collection-hero--with-image collection-hero--bg{% endif %} color-{{ section.settings.color_scheme }} "
    {% if banner_img %}style="--banner-image: url({{ banner_img }});" {% endif %}
  >
    <div class="collection-hero__inner {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      <div class="collection-hero__text-wrapper">
        <h1 class="collection-hero__title">
          <span class="visually-hidden">{{ 'sections.collection_template.title' | t }}: </span>
          {{- collection.title | escape -}}
        </h1>

        {%- if section.settings.show_collection_description and collection.description != blank -%}
          <div class="collection-hero__description rte">{{ collection.description }}</div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.main-collection-banner.settings.paragraph.content"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "t:sections.main-collection-banner.settings.show_collection_description.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
